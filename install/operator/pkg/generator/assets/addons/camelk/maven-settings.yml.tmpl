apiVersion: v1
data:
  settings.xml: |-
    <?xml version="1.0" encoding="UTF-8"?>
    <settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
      <localRepository></localRepository>
      <profiles>
        <profile>
          <id>maven-settings</id>
          <activation>
            <activeByDefault>true</activeByDefault>
          </activation>

      {{- if .Syndesis.Components.Server.Features.MavenRepositories}}
          <repositories>
            {{- range $id, $url := .Syndesis.Components.Server.Features.MavenRepositories}}
              <repository>
                <id>{{ $id }}</id>
                <url>{{ $url }}</url>
                <snapshots>
                  <enabled>false</enabled>
                </snapshots>
                <releases>
                  <enabled>true</enabled>
                </releases>
              </repository>

            {{- end }}
          </repositories>
          <pluginRepositories>
            {{- range $id, $url := .Syndesis.Components.Server.Features.MavenRepositories}}
              <pluginRepository>
                <id>{{ $id }}</id>
                <url>{{ $url }}</url>
                <snapshots>
                  <enabled>false</enabled>
                </snapshots>
                <releases>
                  <enabled>true</enabled>
                </releases>
              </pluginRepository>

            {{- end }}
          </pluginRepositories>

      {{- end}}
        </profile>
      </profiles>
    </settings>
kind: ConfigMap
metadata:
  labels:
    app: camel-k
  name: camel-k-maven-settings
